<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>File</th>
      <th>Descript</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.user_id %></td>
        <td><%= image.title %></td>
        <td><%= image.file %></td>
        <td><%= image.descript %></td>
        <td><%= image.created_at %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!--<td><%= link_to image.title, image %>Submitted <%= time_ago_in_words(image.created_at) %> by <%= image.user.email %></td>-->
        <td><%= link_to like_image_path(image), method: :put do %> Like <%= image.get_upvotes.size %><% end %></td>
        <td><%= link_to dislike_image_path(image), method: :put do  %> Dislike <%= image.get_downvotes.size %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
